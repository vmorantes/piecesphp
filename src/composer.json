{
	"name": "piecesphp",
	"description": "Framework PHP",
	"require": {
		"php": ">=7.1",
		"ext-date": "*",
		"ext-openssl": "*",
		"ext-pcre": "*",
		"ext-hash": "*",
		"ext-session": "*",
		"ext-json": "*",
		"ext-pdo": "*",
		"ext-xml": "*",
		"ext-ctype": "*",
		"ext-mbstring": "*",
		"ext-fileinfo": "*",
		"ext-gd": "*",
		"ext-mcrypt": "*",
		"ext-mysqli": "*",
		"ext-pdo_mysql": "*",
		"ext-sqlite3": "*",
		"ext-pdo_sqlite": "*",
		"ext-zip": "*",
		"ext-xsl": "*",
		"ext-xmlwriter": "*",
		"ext-xmlreader": "*",
		"rlanvin/php-form": "~2.0",
		"slim/slim": "~3.0",
		"phpmailer/phpmailer": "~6.0",
		"spipu/html2pdf": "^5.1",
		"monolog/monolog": "^1.23",
		"phpoffice/phpspreadsheet": "^1.6",
		"piecesphp/database": "~1",
		"piecesphp/datastructures": "~1",
		"piecesphp/html": "~1"
	},
	"suggest": {
		"ext-mongodb": "^1.4.0",
		"mongodb/mongodb": "~1.3"
	},
	"autoload": {
		"psr-4": {
			"PiecesPHP\\ComposerTasks\\": "../tasks",
			"PiecesPHP\\Core\\": "./app/core/psr4/PiecesPHP/Core"
		}
	},
	"scripts": {
		"task": [
			"PiecesPHP\\ComposerTasks\\TasksManager::task"
		],
		"git-log": [
			"git log --graph --pretty=format:'%h %d %s %cr <%an>' --abbrev-commit --name-status --graph --since=2.weeks > ../CHANGELOG.md"
		]
	}
}
